{
  "compileOnSave": true,
  "compilerOptions": {
    "module": "AMD",
    "noImplicitAny": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "outDir": "bin",
    "sourceMap": true,
    "strict": true,
    "target": "ES6"
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "tests/**/*"
  ]
}
